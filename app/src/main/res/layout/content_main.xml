<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:showIn="@layout/activity_main"
        tools:context="kanemars.chuffjava.MainActivity"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/chuffToolbar"/>
    <Button
            android:text="@string/check_times_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkTimesButton"
            android:onClick="immediatelyShowNext2Trains"
            />
    <Button
            android:text="@string/start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startServiceButton"
            android:onClick="onStartServiceButtonClick"
            />
    <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/notificationTimePicker"/>

</LinearLayout>
